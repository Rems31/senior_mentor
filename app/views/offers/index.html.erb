
<nav class="navbar navbar-light bg-light">
  <form class="form-inline">
    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</nav>

<div class="cards-container mt-5">
  <% @offers.each do |offer| %>
    <div class="card">
      <div class="container">
        <% if offer.photo.attached? %>
        <%= image_tag(offer.photo, style: "height:248px; width:248px; border-radius:10px") %>
      <% else %>
        <%= image_tag(offer.photo_url, style: "height:248px; width:248px; border-radius:10px") if offer.photo_url.present? %>
        <h3><b><%= offer.name %></b></h3>
        <p><%= offer.offer_type %></p>
        <p><%= offer.area %></p>
        <h3><b><%= offer.price %>â‚¬</b></h3>
      </div>
    </div>
  <% end %>
</div>

<%= link_to "Add an offer", new_offer_path %>
